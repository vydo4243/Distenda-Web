extend ../../layouts/default.pug

block main
  if (role.RolePermissions.includes("dashboard_view"))
    h1 Trang tổng quan

    .row.mt-4
      .col-12
        .card.mb-4
          .card-header Thông tin tài khoản
          .card-body
            if(user.AdminAvatar)
              img(
                src=user.AdminAvatar
                style="height: 100px;margin-bottom: 15px;"
              )
            if(user.AdminFullName)
              p Họ tên: <b>#{user.AdminFullName}</b>
            if(user.AdminEmail)
              p Email: <b>#{user.AdminEmail}</b>
            if(user.AdminPhone)
              p Số điện thoại: <b>#{user.AdminPhone}</b>
            if(role.RoleName)
              p Phân quyền: <b>#{role.RoleName}</b>

      .col-6
        .card.mb-4
          .card-header Phân loại
          .card-body
            p Số lượng: <b>#{statistic.category.total}</b>
            p Hoạt động: <b>#{statistic.category.active}</b>
            p Dừng hoạt động: <b>#{statistic.category.inactive}</b>

      .col-6
        .card.mb-4
          .card-header Khoá học
          .card-body
            p Số lượng: <b>#{statistic.courses.total}</b>
            p Hoạt động: <b>#{statistic.courses.active}</b>
            p Dừng hoạt động: <b>#{statistic.courses.inactive}</b>

      .col-6
        .card.mb-4
          .card-header Tài khoản admin
          .card-body
            p Số lượng: <b>#{statistic.admin.total}</b>
            p Hoạt động: <b>#{statistic.admin.active}</b>
            p Dừng hoạt động: <b>#{statistic.admin.inactive}</b>

      .col-6
        .card.mb-4
          .card-header Tài khoản user
          .card-body
            p Số lượng: <b>#{statistic.user.total}</b>
            p Hoạt động: <b>#{statistic.user.active}</b>
            p Dừng hoạt động: <b>#{statistic.user.inactive}</b>